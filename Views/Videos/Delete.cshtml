@model VideoStore.Models.Video

@{
    ViewData["Title"] = "Delete Video";
}

<h2>Delete Video</h2>
<p>Are you sure you want to delete "@Model.Title"?</p>
<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure you want to delete this video?');">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
