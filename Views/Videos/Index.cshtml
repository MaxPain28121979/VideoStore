@model IEnumerable<VideoStore.Models.Video>

@{
    ViewData["Title"] = "Videos";
}

<h2>Videos</h2>

@if (User.IsInRole("Admin"))
{
    <a class="btn btn-primary mb-3" asp-action="Create">Create New</a>
}

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Year</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Title</td>
            <td>@item.Genre</td>
            <td>@item.Year</td>
            <td>@item.Price</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                                @if (User.IsInRole("Admin"))
                                {
                                        <text> | <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | 
                                                <button type="button" class="btn btn-link p-0 text-danger open-delete-modal" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@item.Id" data-title="@item.Title">Delete</button>
                                        </text>
                                }
            </td>
        </tr>
}
    </tbody>
</table>

<!-- Delete confirmation modal -->
@if (User.IsInRole("Admin"))
{
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel">Delete Video</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete <strong id="deleteModalTitle"></strong>?</p>
                    </div>
                    <div class="modal-footer">
                        <form asp-action="Delete" method="post" class="m-0">
                                <input type="hidden" name="id" id="deleteId" />
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
}
